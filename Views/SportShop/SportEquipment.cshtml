            {
                <button style="margin:15px;padding:10px;border-radius:10px;">Football</button>
            }
            @using (@Html.BeginForm("OnlyBasketball", "SportShop"))
            {
                <button style="margin:15px;padding:10px;border-radius:10px;">Basketball</button>
            }*@
        </div>
</body>
