@*@model SportsEquipmentStoreManagementApp.Models.Shoe*@
@{
    ViewBag.Title = "Shoes";
}

<body style="background: rgb(214, 206, 206)">

    <h1 style="border-bottom:2px dotted black;border-bottom-width:5px;text-align:center;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;font-size:50px">Shoes</h1>
    <div style="display:flex;flex-wrap:wrap;justify-content:center">

        @using (Html.BeginForm("Shoes", "SportShop")) // 1
        {
            <select name="value" style="padding:10px;border-radius:5px;">
                <option style="display:none">Sort by:</option>
                <option value="1">Price</option>
                <option value="2">Amount</option>
            </select>
            <input type="submit" value="Sort" style="margin:15px;padding:10px;border-radius:10px;" />
        }

        @using (Html.BeginForm("Shoes", "SportShop")) // 2
        {
            <select name="value" style="padding:10px;border-radius:5px;">
                <option style="display:none">Filtering by:</option>
                <option value="3">Discount Shoes</option>
                <option value="4">Walk Shoes</option>
                <option value="5">Running Shoes</option>
             </select>
             <input type="submit" value="Filter" style="margin:15px;padding:10px;border-radius:10px;" />
        }

    </div>
    <div style="display:flex;flex-wrap:wrap;justify-content:space-between;">
        @{

            foreach (var item in ViewBag.context)
            {
                <article class="card_class">
                    <h2 style="text-align:center;">@item.Company</h2>
                    <img style="width:350px;height:300px;" src="@item.LinkImage" />
                    <h3>Shoe Type: @item.ShoeType</h3>
                    <h3>Price: @item.Price</h3>
                </article>
            }
        }

    </div>
    <div style="display:flex;flex-wrap:wrap;justify-content:center;">
        @using (Html.BeginForm("ViewManager", "SportShop"))
        {
            <button style="margin:15px;padding:10px;border-radius:10px;">View Manager</button>
        }

    </div>

</body>
