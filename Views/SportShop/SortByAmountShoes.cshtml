
@{
    ViewBag.Title = "SortByAmountShoes";
}

<body style="background: rgb(214, 206, 206)">
    <h1 style="border-bottom:2px dotted black;border-bottom-width:5px;text-align:center;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;font-size:50px">Sort Shoes</h1>
    <div style="display:flex;flex-wrap:wrap;justify-content:center">
        @using (Html.BeginForm("Shoes", "SportShop"))
        {
            <select name="value" style="padding:10px;border-radius:5px;">
                <option style="display:none">Sort by:</option>
                <option value="1">Price</option>
                <option value="2">Amount</option>
            </select>
            <input type="submit" value="Sort" style="margin:15px;padding:10px;border-radius:10px;" />
        }
        </div>
        <div style="display:flex;flex-wrap:wrap;justify-content:space-between;">
            @{
                foreach (var item in ViewBag.ByAmount)
                {
                    <article>
                        <h2 style="text-align:center;">@item.Company</h2>
                        <img style="width:350px;height:300px;" src="@item.LinkImage" />
                        <h3>Shoe Type: @item.ShoeType</h3>
                        <h3>Price: @item.Price</h3>
                    </article>
                }
            }
        </div>
</body>
@using (@Html.BeginForm("Shoes", "SportShop"))
{
    <button style="margin:15px;padding:10px;border-radius:10px;">Repeat To List >></button>
}
